<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_header">

    <RelativeLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#3189F5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutHeader"
        android:background="@drawable/shape_input"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/viewSetting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/selector_block">

            <TextView
                android:id="@+id/textViewLabelSettting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_content"
                android:text="@string/menu_setting"
                android:textColor="@color/text_color_menu"
                android:textSize="@dimen/text_size_title_second" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#3189F5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewDownLoad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/selector_block">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_content"
                android:text="@string/menu_setting_download"
                android:textColor="@color/text_color_menu"
                android:textSize="@dimen/text_size_title_second" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#3189F5" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>